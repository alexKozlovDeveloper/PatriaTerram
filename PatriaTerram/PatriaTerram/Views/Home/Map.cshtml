@using PatriaTerram.Web.Models
@model PatriaTerram.Web.Models.PaletteView

@{
    ViewBag.Title = "Map";
}

<h2>Map</h2>

<div class="map-container">
    <table>
        @for (int i = 0; i < Model.Width; i++)
        {
            <tr>
                @for (int j = 0; j < Model.Height; j++)
                {
                    <td>
                        @Html.Partial("MapPoint", Model.Points[i][j])
                    </td>
                }
            </tr>
        }
    </table>
</div>

